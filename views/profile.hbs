<div class="profile_container">
    <h1 class="title_profile">{{title}}</h1>

    <div class="profile_desc_box">

        <div class="profile_ava">
            <!--            <img crossorigin="profile_ava_img" src="./public/img/ava.jpg" alt="">-->
            <div style="background-image: url('../img/ava.jpg')" class="profile_ava_img"></div>
            <p>no img</p>
        </div>

        <div class="profile_desc">
            <form action="/profile" method="post">
                <p>Your email: <br>
                    <stromg>{{user.email}}</stromg>
                </p>

                <div class="input-field ">
                    <p>Your name:</p> <br>

                    <input name="name" id="name" type="text" class="validate" required value="{{user.name}}">
                    <span class="helper-text" data-error="Name can not be absent"></span>
                </div>

                <div class="file-field input-field">
                    <div class="btn btn-add_img btn-white">
                        <span>Ava</span>
                        <input class="choose_img" type="file" id="ava" name="ava" value="/img/ava.jpg"/>
                    </div>

                    <div class="file-path-wrapper">
                        <input class="file-path validate " type="text">
                    </div>
                </div>

                <input type="hidden" name="_csrf" value="{{csrf}}">
<!--                <button type="submit" class="btn">To change</button>-->
                <button class="btn-change_profile" type="submit" id="btn_add_new_product">ADD</button>

            </form>
        </div>

    </div>


</div>