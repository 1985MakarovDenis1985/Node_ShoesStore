<h1 class="order-title">{{title}}</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="orders-container">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Order: <small>{{_id}}</small></span>
                    <p class="date">{{date}}</p>
                    <p><em>{{user.userId.name}}</em>({{user.userId.email}})</p>

                    <p>
                        {{#each products}}
<!--                            <div style="background-image: url('/img/{{product.imgUrl}}')" class="order-prod_img"></div>-->
                            <li>{{product.title}}: <strong>{{count}} items</strong> <a href="/products/{{product._id}}">show</a></li>
                        {{/each}}
                    </p>

                    <hr>
                    <p>Overall: <span class="price prod-currency">{{price}}</span></p>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h1>Order box is empty</h1>
{{/if}}