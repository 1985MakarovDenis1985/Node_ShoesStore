                        <option class="option_size" value="38">38</option>
                        <option class="option_size" value="39">39</option>
                        <option class="option_size" value="40">40</option>
                        <option class="option_size" value="41">41</option>
                        <option class="option_size" value="42">42</option>
                        <option class="option_size" value="43">43</option>
                        <option class="option_size" value="44">44</option>
                    </select>
                </div>

                <!--                <input type="string" placeholder="size" name="size" value="{{product.size}}"/>-->


                <textarea class="desc" id="" cols="30" rows="10" placeholder="desc"
                          name="desc">{{product.desc}}</textarea>
                <input type="hidden" name="id" value="{{product.id}}">

                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" id="temp_btn_add">ADD</button>
            </div>
        </form>
    </div>
</div>

