<script>
    const inpImg = document.getElementById('imgUrl')
    const tempImg = document.getElementById('temp_img')

    inpImg.addEventListener('change', (e) => {
        let filename = e.target.value.replace(/.*\\/, "")
        tempImg.src = '/img/' + filename
    })

    let x = Array.from(document.getElementsByClassName("selected_size"))
    let y = Array.from(document.getElementsByClassName("option_size"))

    for (let i = 0; i < x.length; i++) {
        for (let j = 0; j < y.length; j++) {
            if (y[j].value == x[i].dataset.size) {
                y[j].selected = true
                console.log(y[j])
            }
        }
    }

</script>