<div class="add_container ">
    <div class="add_form_container" id="">
        <form method="post" action="/products/edit" class="form_block">


            <div class="left_add_block_add">
                <img class="show_img" id="temp_img" name="img" src="/img/{{product.imgUrl}}" alt=""/>
                <input type="file" id="imgUrl" name="imgUrl" value="{{product.imgUrl}}"/>
            </div>

            <div class="right_add_block_add">
                <input type="text" placeholder="title" name="title" value="{{product.title}}"/>
                <input type="text" placeholder="price" name="price" value="{{product.price}}"/>
                <input type="text" placeholder="first price" name="startPrice" value="{{product.startPrice}}"/>
                <input type="text" placeholder="sex" name="sex" value="{{product.sex}}"/>


                {{#each product.size}}
                    <div class="selected_size" data-size={{this}} style="display: none">11111</div>
                {{/each}}

                <div class="input-field col s12 select_size">
                    <select multiple name="size" id="size">
                        <option value="" disabled selected>Size:</option>

                        <option class="option_size" value="31">31</option>
                        <option class="option_size" value="32">32</option>
                        <option class="option_size" value="33">33</option>
                        <option class="option_size" value="34">34</option>
                        <option class="option_size" value="35">35</option>
                        <option class="option_size" value="36">36</option>
