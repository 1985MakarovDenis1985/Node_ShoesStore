<div class="add_container">
    <div class="add_form_container" id="">
        <form method="post" action="/products/edit" class="form_block">
            <div class="left_add_block">
                <img class="temp_img" id="temp_img" src="/img/{{product.imgUrl}}" alt=""/>
                <input type="file" id="imgUrl" name="imgUrl" value="{{product.imgUrl}}" multiple/>
            </div>

            <div class="right_add_block">
                <input type="text" placeholder="title" name="title" value="{{product.title}}"/>
                <input type="text" placeholder="price" name="price" value="{{product.price}}"/>
                <input type="text" placeholder="first price" name="startPrice" value="{{product.startPrice}}"/>
                <input type="text" placeholder="sex" name="sex" value="{{product.sex}}"/>
                <input type="string" placeholder="size" name="size" value="{{product.size}}"/>
                <textarea class="desc" id="" cols="30" rows="10" placeholder="desc"
                          name="desc">{{product.desc}}</textarea>
                <input type="hidden" name="id" value="{{product.id}}">
                <button type="submit" id="temp_btn_add">ADD</button>
            </div>
        </form>
    </div>
</div>
</div>

<!--изменить-->
<script>
    const inpImg = document.getElementById('imgUrl')
    const tempImg = document.getElementById('temp_img')

    inpImg.addEventListener('change', (e)=>{
        let filename = e.target.value.replace(/.*\\/, "")
        tempImg.src = '/img/'+filename
    })
</script>