<div class="product_box">
    <div class="product_box_img">
        <div class="product_slider">
            <div class="box_img_product" style="background-image: url('/img/{{product.imgUrl}}')"></div>
            <div class="box_img_product" style="background-image: url('/img/{{product.imgUrl}}')"></div>
            <div class="box_img_product" style="background-image: url('/img/{{product.imgUrl}}')"></div>
        </div>
    </div>

    <div class="product_box_desc">
        <div class="product_main_desc">
            <h1 class="product_title">TITLE: <span>{{product.title}}</span></h1>
            <h1 class="product_title">GANDER: <span>{{product.sex}}</span></h1>
            <h1 class="product_title">SIZE: <span>{{product.size}}</span></h1>
            <h1 class="product_title">DESCRIPTION:
                <p style="margin-top: 1%" class="product_title">
                    <span>{{product.desc}}</span>
                </p>
            </h1>
            <div class="new_price prod-currency" id="new_price">{{product.price}}</div>
        </div>

        {{#if product.startPrice}}
            {{product.boxSale}}
            <div class="price_before prod-currency" id="price_before">{{product.startPrice}}</div>
            <div class="boxSale" id="product_percent"></div>
        {{/if}}

        {{#if isAuth}}

            <form class="form-buy_product" action="/cart/add" method="post">
                <input type="hidden" name="id" value="{{product._id}}">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" class="btn-buy btn btn-primary">Byu</button>
            </form>
            <div class="clearfix"></div>

            {{#ifeq product.userId userId}}
                <div class="btn-buy btn_edit" id="btn_edit">
                    <div class="link_cover" id="link_cover"></div>
                    <a class="link_edit " href="/products/{{product._id}}/edit?allow=true">Edit</a>
                </div>
                <div class="clearfix"></div>

                <div class="btn-buy btn-remove_box" >
                    <form action="/products/remove" method="post">
                        <input type="hidden" name="id" value={{product._id}}>

                        <input type="hidden" name="_csrf" value="{{csrf}}">
                        <button class="btn-buy btn-remove" id="btn-remove">Remove</button>
                    </form>
                </div>

            {{else}}
                <p id="btnProductsErrAuth" class="btn_err_auth">You can do it only if you OWNER</p>
                <div style="background:gray" class="btn-product btn-buy btn_edit" id="btn_edit">
                    <div class="link_cover" id="link_cover"></div>
                    <a class="link_edit " href="#">Edit</a>
                </div>
                <div class="clearfix"></div>

                <div style="background:gray" class="btn-product btn-buy btn-remove_box" id="btn_edit">
                    <button class="btn-buy btn-remove" id="btn-remove">Remove</button>
                </div>

            {{/ifeq}}

        {{else}}

            <p id="btnProductsErrAuth" class="btn_err_auth">You can do it only after registration</p>
            <button style="background:gray" class="btn-product btn-buy btn btn-primary">Byu</button>
            <div class="clearfix"></div>

            <div style="background:gray" class="btn-product btn-buy btn_edit" id="btn_edit">
                <div class="link_cover" id="link_cover"></div>
                <a class="link_edit " href="#">Edit</a>
            </div>
            <div class="clearfix"></div>

            <div style="background:gray" class="btn-product btn-buy btn-remove_box" id="btn_edit">
                <button class="btn-buy btn-remove" id="btn-remove">Remove</button>
            </div>
        {{/if}}


