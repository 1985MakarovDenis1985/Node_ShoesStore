<script>

    const priceBefore = document.getElementById("price_before")
    const percentBox = document.getElementById("product_percent")
    const percentSale = countPercent({{product.startPrice}}, {{product.price}})
    if ({{product.startPrice}}) {
        percentBox.innerText = `- ${percentSale}%`
    }

    function countPercent(price, newPrice) {
        let count = Math.ceil(100 - newPrice * 100 / price);
        return +count
    }

    const btnEdit = document.getElementById("link_cover").style.display = "none"
    const btnProduct = Array.from(document.getElementsByClassName('btn-product'))
    btnProduct.map(el => {
        el.addEventListener("click", () => {
            document.getElementById('btnProductsErrAuth').classList.add('btn_err_auth-active')
            setTimeout(() => {
                document.getElementById('btnProductsErrAuth').classList.remove('btn_err_auth-active')
            }, 2000)
        })
    })

</script>
